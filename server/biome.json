{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"indentStyle": "space",
		"lineWidth": 120,
		"indentWidth": 2
	},
	"files": {
		"include": ["src/**/*.ts", "core/**/*.ts"],
		"ignore": ["node_modules", "dist"]
	}
}
